random(a, b)
	return math(math(0, 'random') * (b - a + 1) + a, 'floor')

item-width-pct = 40
item-min-width = 20em

jobs-decors = 3
jobs-decors-margin = 18%

.main[data-page='index.html'] section.jobs
	position relative

	.jobs-list
		display flex
		flex-direction column
	.jobs-item
		position relative
		min-width item-min-width
		width (item-width-pct * 1%)
		padding 2em
		background color-bg
		& + .jobs-item
			margin-top 66px
		for i in (1..8)
			&:nth-of-type(8n + {2 * i})
				left (random((100 - item-width-pct) * 2 / 3, 100 - item-width-pct) * 1%)
			&:nth-of-type(8n + {2 * i + 1})
				left (random(0, (100 - item-width-pct) / 3) * 1%)
		&:first-of-type
			left auto
			margin-left 10%
			align-self flex-start
			box-shadow -6px 0 0 color-accent
		&:last-of-type
			left auto
			margin-right 10%
			align-self flex-end

		@media (max-width (item-min-width * 2))
			align-self stretch
			min-width unset
			width auto
			padding 1em 0
			& + .jobs-item
				margin-top 3em
			&:nth-of-type(1n)
				left 0
				right 0
				margin-left 0
				margin-right 0
			&:first-of-type
				padding-left 1em
				border-right none
				border-top none
				border-bottom none

	.job-header
		display flex
	.job-overview
		flex 1 1 auto
		align-items flex-start
	.job-thumbnail
		flex 0 0 auto
		margin-left 1em
		width 50px
		height 50px
		@media (max-width (item-min-width * 2))
			margin-right 1em
	.job-thumbnail-img
		width 100%
		height 100%
		object-fit contain

	.job-name
		font-heading1()
	.job-date
		margin-top 0

	// decorative pseudo-elements (for background)
	for i in (1..jobs-decors)
		color-var = 'color-accent' + ((i - 1) * 1 % color-accents + 1)
		.jobs-decor{i}
			position absolute
			top 45vh // skip over headings
			bottom 20vh
			left 0
			right 0
			clip-slant(
				sin(holy-angle) * 100vw,
				((i - 1) / jobs-decors * (100% + jobs-decors-margin)),
				(i / jobs-decors * (100% + jobs-decors-margin) - jobs-decors-margin)
			)
			&::before
				content ''
				position fixed
				left 5%
				top 30%
				width 70%
				height 40%
				transform translateX(20vw * (i - 1) / (jobs-decors - 1))
				background linear-gradient(120deg + holy-angle, lookup(color-var) 40%, lookup(color-var + '-tint'))
				@supports (mix-blend-mode: soft-light)
					background url('img/tex.png'), @background
					background-blend-mode soft-light
			@media (max-width (item-min-width * 2))
				display none
