{
  "dependencies": {
    "chokidar-cli": "^3.0.0",
    "compose-html": "https://github.com/Kalabasa/compose-html#master",
    "glob": "^8.1.0",
    "marked": "^4.2.12",
    "node-fetch": "2",
    "prismjs": "^1.29.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.3"
  },
  "scripts": {
    "build": "compose-html --config compose-html.json",
    "build-dev": "NODE_ENV=development npm run build",
    "build-prod": "NODE_ENV=production npm run build",
    "dev": "npm run watch & npm run serve",
    "watch": "chokidar 'src/**' -c 'npm run build-dev' --initial --throttle 2000",
    "serve": "python3 -m http.server --directory out/site",
    "clean": "rimraf out"
  },
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.18.0",
    "@html-eslint/parser": "^0.18.0",
    "chalk": "4",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.40.0",
    "strip-ansi-cli": "^3.0.2",
    "textlint": "^13.3.1",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-filter-rule-node-types": "^1.1.0",
    "textlint-plugin-html": "^1.0.0",
    "textlint-rule-apostrophe": "^2.0.0",
    "textlint-rule-max-comma": "^3.0.1",
    "textlint-rule-no-start-duplicated-conjunction": "^2.0.2",
    "textlint-rule-spellchecker": "^2.2.1",
    "textlint-rule-terminology": "^3.0.4"
  }
}
