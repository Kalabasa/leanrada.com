{
  "dependencies": {
    "chokidar-cli": "^3.0.0",
    "compose-html": "file:../compose-html",
    "glob": "^8.1.0",
    "marked": "^4.2.12",
    "prismjs": "^1.29.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.3"
  },
  "scripts": {
    "build": "compose-html --config compose-html.json",
    "build-dev": "NODE_ENV=development yarn build",
    "build-prod": "NODE_ENV=production yarn build",
    "dev": "yarn watch & yarn serve",
    "watch": "chokidar 'src/**' -c 'yarn build-dev' --initial --throttle 2000",
    "serve": "python3 -m http.server --directory out/site",
    "clean": "rimraf out"
  },
  "devDependencies": {
    "chalk": "4",
    "cheerio": "^1.0.0-rc.12",
    "textlint": "^13.3.1",
    "textlint-filter-rule-node-types": "^1.1.0",
    "textlint-plugin-html": "^1.0.0",
    "textlint-rule-apostrophe": "^2.0.0",
    "textlint-rule-max-comma": "^3.0.1",
    "textlint-rule-no-start-duplicated-conjunction": "^2.0.2",
    "textlint-rule-spellchecker": "^2.2.1",
    "textlint-rule-terminology": "^3.0.4"
  }
}
