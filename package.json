{
  "dependencies": {
    "chokidar-cli": "^3.0.0",
    "compose-html": "file:../compose-html",
    "glob": "^8.1.0",
    "marked": "^4.2.12",
    "prismjs": "^1.29.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.3"
  },
  "scripts": {
    "build": "NODE_ENV=production compose-html --config compose-html.json",
    "dev": "yarn watch & yarn serve",
    "watch": "chokidar 'src/**' -c 'compose-html --config compose-html.json' --initial --throttle 2000",
    "serve": "python3 -m http.server --directory docs",
    "clean": "rimraf docs"
  },
  "devDependencies": {
    "chalk": "4"
  }
}
